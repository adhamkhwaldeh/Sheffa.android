<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.joyBox.shefaa.views.Stateslayoutview
        android:id="@+id/stateLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:NoConnectionLayout="@layout/state_layout_noconnection"
        app:NoDataLayout="@layout/state_layout_nodata"
        app:RefreshbtnRes="@+id/retryBtn"
        app:WaitingLayout="@layout/state_layout_waiting"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/md_padding"
                app:layout_constraintBottom_toTopOf="@+id/saveBtn"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/cityContainer"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <android.support.v7.widget.AppCompatTextView
                            style="@style/AppTheme.TextWhiteAppearance"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="start|center_vertical"
                            android:text="@string/City"
                            android:textAlignment="gravity"
                            app:layout_constraintWidth_percent="0.3" />

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/city"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|start"
                            android:layout_weight="1"
                            android:background="@drawable/edittextdrawble"
                            android:inputType="text"
                            android:minHeight="@dimen/EditTextHeight"
                            android:textAlignment="gravity"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintWidth_percent="0.7" />

                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/areaContainer"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toBottomOf="@+id/cityContainer">

                        <android.support.v7.widget.AppCompatTextView
                            style="@style/AppTheme.TextWhiteAppearance"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="start|center_vertical"
                            android:text="@string/Area"
                            android:textAlignment="gravity"
                            app:layout_constraintWidth_percent="0.3" />

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/area"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|start"
                            android:layout_weight="1"
                            android:background="@drawable/edittextdrawble"
                            android:inputType="text"
                            android:minHeight="@dimen/EditTextHeight"
                            android:textAlignment="gravity"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintWidth_percent="0.7" />

                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/streetContainer"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toBottomOf="@+id/areaContainer">

                        <android.support.v7.widget.AppCompatTextView
                            style="@style/AppTheme.TextWhiteAppearance"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="start|center_vertical"
                            android:text="@string/Street"
                            android:textAlignment="gravity"
                            app:layout_constraintWidth_percent="0.3" />

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/street"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|start"
                            android:layout_weight="1"
                            android:background="@drawable/edittextdrawble"
                            android:inputType="text"
                            android:minHeight="@dimen/EditTextHeight"
                            android:textAlignment="gravity"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintWidth_percent="0.7" />

                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/specializationContainer"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toBottomOf="@+id/streetContainer">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/specializationTitle"
                            style="@style/AppTheme.TextWhiteAppearance"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="start|center_vertical"
                            android:text="@string/Specialization"
                            android:textAlignment="gravity"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintWidth_percent="0.3" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/specializationRecyclerView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:minHeight="@dimen/EditTextHeight"
                            android:textAlignment="gravity"
                            app:layout_constraintBottom_toBottomOf="@+id/addSpecializationBtn"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/addSpecializationBtn"
                            app:layout_constraintRight_toLeftOf="@+id/addSpecializationBtn"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/specializationTitle"
                            app:layout_constraintTop_toTopOf="@+id/addSpecializationBtn" />

                        <ImageButton
                            android:id="@+id/addSpecializationBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/sm_margin"
                            android:background="@color/transparent"
                            android:src="@drawable/ic_add_light_24dp"
                            app:layout_constraintBottom_toBottomOf="parent"

                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/phoneContainer"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toBottomOf="@+id/specializationContainer">

                        <android.support.v7.widget.AppCompatTextView
                            style="@style/AppTheme.TextWhiteAppearance"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="start|center_vertical"
                            android:text="@string/Phone"
                            android:textAlignment="gravity"
                            app:layout_constraintWidth_percent="0.3" />

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/phone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|start"
                            android:layout_weight="1"
                            android:background="@drawable/edittextdrawble"
                            android:inputType="text"
                            android:minHeight="@dimen/EditTextHeight"
                            android:textAlignment="gravity"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintWidth_percent="0.7" />

                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/costContainer"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toBottomOf="@+id/phoneContainer">

                        <android.support.v7.widget.AppCompatTextView
                            style="@style/AppTheme.TextWhiteAppearance"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="start|center_vertical"
                            android:text="@string/Cost"
                            android:textAlignment="gravity"
                            app:layout_constraintWidth_percent="0.3" />

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/cost"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|start"
                            android:layout_weight="1"
                            android:background="@drawable/edittextdrawble"
                            android:inputType="text"
                            android:minHeight="@dimen/EditTextHeight"
                            android:textAlignment="gravity"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintWidth_percent="0.7" />

                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/homeAppointmentContainer"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toBottomOf="@+id/costContainer">

                        <android.support.v7.widget.AppCompatTextView
                            style="@style/AppTheme.TextWhiteAppearance"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="start|center_vertical"
                            android:text="@string/HomeAppointment"
                            android:textAlignment="gravity"
                            app:layout_constraintWidth_percent="0.5" />

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/homeAppointment"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|start"
                            android:layout_weight="1"
                            android:inputType="text"
                            android:minHeight="@dimen/EditTextHeight"
                            android:textAlignment="gravity"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintWidth_percent="0.5" />

                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/clinicContainer"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toBottomOf="@+id/homeAppointmentContainer">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/clinicSchedulerTitle"
                            style="@style/AppTheme.TextWhiteAppearance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|start|center_vertical"
                            android:text="@string/ClinicScheduler"
                            android:textAlignment="gravity" />

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/saturdayContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/clinicSchedulerTitle">

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/Saturday"
                                style="@style/AppTheme.TextWhiteAppearance"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"

                                android:text="@string/Saturday"
                                android:textAlignment="gravity"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintWidth_percent="0.25" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/saturdayStartDate"
                                style="@style/AppTheme.TextWhiteAppearance"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:drawableEnd="@drawable/ic_calender_dark_24dp"
                                android:drawableRight="@drawable/ic_calender_dark_24dp"
                                android:gravity="center"
                                android:text="@string/Saturday"
                                android:textAlignment="gravity"
                                app:layout_constraintLeft_toRightOf="@+id/Saturday"
                                app:layout_constraintStart_toEndOf="@+id/Saturday"
                                app:layout_constraintWidth_percent="0.25" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/SaturdayTo"
                                style="@style/AppTheme.TextWhiteAppearance"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"

                                android:text="@string/To"
                                android:textAlignment="gravity"
                                app:layout_constraintLeft_toRightOf="@+id/saturdayStartDate"
                                app:layout_constraintStart_toEndOf="@+id/saturdayStartDate"
                                app:layout_constraintWidth_percent="0.25" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/saturdayToDate"
                                style="@style/AppTheme.TextWhiteAppearance"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:drawableEnd="@drawable/ic_calender_dark_24dp"
                                android:drawableRight="@drawable/ic_calender_dark_24dp"
                                android:gravity="center"
                                android:text="@string/Saturday"
                                android:textAlignment="gravity"
                                app:layout_constraintLeft_toRightOf="@+id/SaturdayTo"
                                app:layout_constraintStart_toEndOf="@+id/SaturdayTo"
                                app:layout_constraintWidth_percent="0.25" />

                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/sundayContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/saturdayContainer">

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/sunday"
                                style="@style/AppTheme.TextWhiteAppearance"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"

                                android:text="@string/Sunday"
                                android:textAlignment="gravity"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintWidth_percent="0.25" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/sundayStartDate"
                                style="@style/AppTheme.TextWhiteAppearance"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:drawableEnd="@drawable/ic_calender_dark_24dp"
                                android:drawableRight="@drawable/ic_calender_dark_24dp"
                                android:gravity="center"
                                android:text="@string/Saturday"
                                android:textAlignment="gravity"
                                app:layout_constraintLeft_toRightOf="@+id/sunday"
                                app:layout_constraintStart_toEndOf="@+id/sunday"
                                app:layout_constraintWidth_percent="0.25" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/sundayTo"
                                style="@style/AppTheme.TextWhiteAppearance"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"

                                android:text="@string/To"
                                android:textAlignment="gravity"
                                app:layout_constraintLeft_toRightOf="@+id/sundayStartDate"
                                app:layout_constraintStart_toEndOf="@+id/sundayStartDate"
                                app:layout_constraintWidth_percent="0.25" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/sundayToDate"
                                style="@style/AppTheme.TextWhiteAppearance"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:drawableEnd="@drawable/ic_calender_dark_24dp"
                                android:drawableRight="@drawable/ic_calender_dark_24dp"
                                android:gravity="center"
                                android:text="@string/Saturday"
                                android:textAlignment="gravity"

                                app:layout_constraintLeft_toRightOf="@+id/sundayTo"
                                app:layout_constraintStart_toEndOf="@+id/sundayTo"
                                app:layout_constraintWidth_percent="0.25" />

                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/mondayContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/sundayContainer">

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/monday"
                                style="@style/AppTheme.TextWhiteAppearance"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"

                                android:text="@string/Monday"
                                android:textAlignment="gravity"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintWidth_percent="0.25" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/monDayStartDate"
                                style="@style/AppTheme.TextWhiteAppearance"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:drawableEnd="@drawable/ic_calender_dark_24dp"
                                android:drawableRight="@drawable/ic_calender_dark_24dp"
                                android:gravity="center"
                                android:text="@string/Saturday"
                                android:textAlignment="gravity"
                                app:layout_constraintLeft_toRightOf="@+id/monday"
                                app:layout_constraintStart_toEndOf="@+id/monday"
                                app:layout_constraintWidth_percent="0.25" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/mondayTo"
                                style="@style/AppTheme.TextWhiteAppearance"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"

                                android:text="@string/To"
                                android:textAlignment="gravity"
                                app:layout_constraintLeft_toRightOf="@+id/monDayStartDate"
                                app:layout_constraintStart_toEndOf="@+id/monDayStartDate"
                                app:layout_constraintWidth_percent="0.25" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/monDayToDate"
                                style="@style/AppTheme.TextWhiteAppearance"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:drawableEnd="@drawable/ic_calender_dark_24dp"
                                android:drawableRight="@drawable/ic_calender_dark_24dp"
                                android:gravity="center"
                                android:text="@string/Saturday"
                                android:textAlignment="gravity"
                                app:layout_constraintLeft_toRightOf="@+id/mondayTo"
                                app:layout_constraintStart_toEndOf="@+id/mondayTo"
                                app:layout_constraintWidth_percent="0.25" />

                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/tuesdayContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/mondayContainer">

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tuesday"
                                style="@style/AppTheme.TextWhiteAppearance"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"

                                android:text="@string/Tuesday"
                                android:textAlignment="gravity"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintWidth_percent="0.25" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tuesdayStartDate"
                                style="@style/AppTheme.TextWhiteAppearance"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:drawableEnd="@drawable/ic_calender_dark_24dp"
                                android:drawableRight="@drawable/ic_calender_dark_24dp"
                                android:gravity="center"
                                android:text="@string/Saturday"
                                android:textAlignment="gravity"
                                app:layout_constraintLeft_toRightOf="@+id/tuesday"
                                app:layout_constraintStart_toEndOf="@+id/tuesday"
                                app:layout_constraintWidth_percent="0.25" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tuesdayTo"
                                style="@style/AppTheme.TextWhiteAppearance"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"

                                android:text="@string/To"
                                android:textAlignment="gravity"
                                app:layout_constraintLeft_toRightOf="@+id/tuesdayStartDate"
                                app:layout_constraintStart_toEndOf="@+id/tuesdayStartDate"
                                app:layout_constraintWidth_percent="0.25" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tuesdayToDate"
                                style="@style/AppTheme.TextWhiteAppearance"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:drawableEnd="@drawable/ic_calender_dark_24dp"
                                android:drawableRight="@drawable/ic_calender_dark_24dp"
                                android:gravity="center"
                                android:text="@string/Saturday"
                                android:textAlignment="gravity"
                                app:layout_constraintLeft_toRightOf="@+id/tuesdayTo"
                                app:layout_constraintStart_toEndOf="@+id/tuesdayTo"
                                app:layout_constraintWidth_percent="0.25" />

                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/wednesdayContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/tuesdayContainer">

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/wednesday"
                                style="@style/AppTheme.TextWhiteAppearance"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"

                                android:text="@string/Wednsday"
                                android:textAlignment="gravity"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintWidth_percent="0.25" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/wednesdayStartDate"
                                style="@style/AppTheme.TextWhiteAppearance"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:drawableEnd="@drawable/ic_calender_dark_24dp"
                                android:drawableRight="@drawable/ic_calender_dark_24dp"
                                android:gravity="center"
                                android:text="@string/Saturday"
                                android:textAlignment="gravity"

                                app:layout_constraintLeft_toRightOf="@+id/wednesday"
                                app:layout_constraintStart_toEndOf="@+id/wednesday"
                                app:layout_constraintWidth_percent="0.25" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/wednesdayTo"
                                style="@style/AppTheme.TextWhiteAppearance"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"

                                android:text="@string/To"
                                android:textAlignment="gravity"
                                app:layout_constraintLeft_toRightOf="@+id/wednesdayStartDate"
                                app:layout_constraintStart_toEndOf="@+id/wednesdayStartDate"
                                app:layout_constraintWidth_percent="0.25" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/wednesdayToDate"
                                style="@style/AppTheme.TextWhiteAppearance"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:drawableEnd="@drawable/ic_calender_dark_24dp"
                                android:drawableRight="@drawable/ic_calender_dark_24dp"
                                android:gravity="center"
                                android:text="@string/Saturday"
                                android:textAlignment="gravity"

                                app:layout_constraintLeft_toRightOf="@+id/wednesdayTo"
                                app:layout_constraintStart_toEndOf="@+id/wednesdayTo"
                                app:layout_constraintWidth_percent="0.25" />

                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/thursdayContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/wednesdayContainer">

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/thursday"
                                style="@style/AppTheme.TextWhiteAppearance"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"

                                android:text="@string/Thursday"
                                android:textAlignment="gravity"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintWidth_percent="0.25" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/thursdayStartDate"
