<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/availabletimetext"
        style="@style/AppTheme.TextAppearance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/md_margin"
        android:layout_marginRight="@dimen/md_margin" />

    <CheckBox
        android:id="@+id/selecttimecheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/sperator"
        android:layout_below="@+id/selecttimecheckbox"
        android:background="@color/lightgray" />

</RelativeLayout>