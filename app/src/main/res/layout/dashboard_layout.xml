<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_dashboard_layout" />

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:columnCount="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:rowCount="3">

            <RelativeLayout
                android:id="@+id/ManageAccountContainer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_column="0"
                app:layout_columnSpan="1"
                app:layout_columnWeight="1"
                app:layout_row="0"
                app:layout_rowSpan="1"
                app:layout_rowWeight="1">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/ManageAccountText"
                    android:src="@drawable/user" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/ManageAccountText"
                    style="@style/AppTheme.TitleTextAppearanceWhiteCenter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="@string/ManageAccount"
                    app:autoSizeTextType="uniform" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/MyMedicalProfileContainer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_column="1"
                app:layout_columnSpan="1"
                app:layout_columnWeight="1"
                app:layout_row="0"
                app:layout_rowSpan="1"
                app:layout_rowWeight="1">


                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/MyMedicalProfileText"
                    android:src="@drawable/user" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/MyMedicalProfileText"
                    style="@style/AppTheme.TitleTextAppearanceWhiteCenter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="@string/MyMedicalProfile"
                    app:autoSizeTextType="uniform" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/AdvanceSearchContainer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_column="0"
                app:layout_columnSpan="1"
                app:layout_columnWeight="1"
                app:layout_row="1"
                app:layout_rowSpan="1"
                app:layout_rowWeight="1">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/AdvanceSearchText"
                    android:src="@drawable/user" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/AdvanceSearchText"
                    style="@style/AppTheme.TitleTextAppearanceWhiteCenter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="@string/AdvanceSearch"
                    app:autoSizeTextType="uniform" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/AppointmentContainer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_column="1"
                app:layout_columnSpan="1"
                app:layout_columnWeight="1"
                app:layout_row="1"
                app:layout_rowSpan="1"
                app:layout_rowWeight="1">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/AppointmentText"
                    android:src="@drawable/user" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/AppointmentText"
                    style="@style/AppTheme.TitleTextAppearanceWhiteCenter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="@string/Appointments"
                    app:autoSizeTextType="uniform" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/SelfMonitorContainer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_column="0"
                app:layout_columnSpan="1"
                app:layout_columnWeight="1"
                app:layout_row="2"
                app:layout_rowSpan="1"
                app:layout_rowWeight="1">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/SelfMonitorText"
                    android:src="@drawable/user" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/SelfMonitorText"
                    style="@style/AppTheme.TitleTextAppearanceWhiteCenter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="@string/SelfMonitor"
                    app:autoSizeTextType="uniform" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/GuardianshipContainer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_column="1"
                app:layout_columnSpan="1"
                app:layout_columnWeight="1"
                app:layout_row="2"
                app:layout_rowSpan="1"
                app:layout_rowWeight="1">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/guardianshipText"
                    android:src="@drawable/user" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/guardianshipText"
                    style="@style/AppTheme.TitleTextAppearanceWhiteCenter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="@string/guardianship"
                    app:autoSizeTextType="uniform" />
            </RelativeLayout>


        </android.support.v7.widget.GridLayout>


    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginTop="0dp"
        app:headerLayout="@layout/patient_main_header_drawer"
        app:menu="@menu/patient_main_menu_drawer" />

</android.support.v4.widget.DrawerLayout>