<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item android:bottom="-2dp">
                <shape>
                    <solid android:color="@color/white" />
                    <stroke android:width="1dp" android:color="@color/white" />
                </shape>
            </item>

            <item android:left="-2dp" android:right="-2dp" android:top="-2dp">
                <shape>
                    <solid android:color="@color/transparent" />
                    <stroke android:width="2dp" android:color="@color/lightgray" />
                    <padding android:bottom="@dimen/md_padding" android:left="@dimen/md_padding" android:right="@dimen/md_padding" android:top="@dimen/md_padding" />
                </shape>
            </item>

        </layer-list>

    </item>

</selector>