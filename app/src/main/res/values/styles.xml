<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:dialogTheme">@style/AppTheme.DialogSlideAnim</item>
        <item name="android:alertDialogTheme">@style/AppAlertTheme</item>
    </style>

    <style name="AppTheme.MainToggle">

    </style>

    <style name="AppAlertTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="android:textColorHighlight">@color/colorAccent</item>
        <item name="android:windowBackground">@null</item>

    </style>

    <style name="AppTheme.DialogSlideAnim" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <!-- Toolbar started -->
    <style name="toolbar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ToolBarWithNavigationBack" parent="@style/toolbar">
        <item name="navigationIcon">@drawable/ic_arrow_back_white_24dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark">

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">

    </style>

    <style name="ToolBarWithCustomNavigationBack" parent="@style/toolbar">
        <item name="navigationIcon">@drawable/ic_arrow_back_white_24dp</item>

    </style>
    <!-- Toolbar Ended -->

    <!-- TextView Appearance Started-->
    <style name="AppTheme.TitleTextAppearance" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/xsm_margin</item>
        <item name="android:gravity">start|left</item>
        <item name="android:layout_gravity">left|start</item>
    </style>

    <style name="AppTheme.TitleBlackTextAppearance" parent="AppTheme.TitleTextAppearance">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.TitleTextAppearanceCenter" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/xsm_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.TitleTextAppearanceWhite" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/xsm_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">start|left</item>
    </style>

    <style name="AppTheme.TitleTextAppearanceWhiteCenter" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/xsm_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="AppTheme.TextAppearanceSmall" parent="TextAppearance.AppCompat.Small.Inverse">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/xsm_padding</item>
        <item name="android:textSize">10.5sp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <!--<item name="android:textAlignment">gravity</item>-->
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.TextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/xsm_margin</item>
        <item name="android:gravity">start|left</item>
        <item name="android:layout_gravity">left|start</item>
    </style>

    <style name="AppTheme.MediumTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/xsm_margin</item>
        <item name="android:gravity">start|left</item>
        <item name="android:layout_gravity">left|start</item>
    </style>

    <style name="AppTheme.MediumBlackTextAppearance" parent="AppTheme.MediumTextAppearance">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.MediumWhiteTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/xsm_margin</item>
        <item name="android:gravity">start|left</item>
        <item name="android:layout_gravity">left|start</item>
    </style>

    <style name="AppTheme.TextWhiteAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/xsm_margin</item>
        <item name="android:gravity">start|left</item>
        <item name="android:layout_gravity">left|start</item>
    </style>

    <style name="AppTheme.TextGrayAppearance" parent="AppTheme.TextAppearance">
        <item name="android:textColor">@color/lightgray</item>
    </style>

    <style name="AppTheme.TextBlackAppearance" parent="AppTheme.TextAppearance">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.TextAppearanceCenter" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/xsm_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- TextView Appearance Ended-->


    <style name="AppTheme.NormalButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.SmallButtonStyle" parent="Base.Widget.AppCompat.Button.Small">
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_up</item>
    </style>

    <style name="AppTheme.DialogSlideAnimwithback" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.MyRatebar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:layout_margin">@dimen/md_margin</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1</item>
        <item name="colorControlNormal">@color/lightgray</item>
        <item name="colorControlActivated">@color/golden_stars</item>
    </style>

    <style name="AppTheme.LargRatebar" parent="Base.Widget.AppCompat.RatingBar">
        <item name="android:layout_margin">@dimen/md_margin</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1</item>
        <item name="colorControlNormal">@color/lightgray</item>
        <item name="colorControlActivated">@color/golden_stars</item>
    </style>


    <style name="TransparentBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TransparentBottomSheetStyle</item>
    </style>

    <style name="TransparentBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BottomSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

</resources>
